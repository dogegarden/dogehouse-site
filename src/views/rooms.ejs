<!DOCTYPE html>
<html lang="en">

<%- include('./Components/Head', { title: 'Rooms'}) %>
    <%- include('./Components/Navbar', { user }) %>

        <body>
            <%- include('./Components/SecondTab', { user }) %>
                <div class="container" style=" width: 1400px; margin-top: 43px;">
                    <% if (error) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= message %>
                        </div>
                        <% } %>

                            <% if (success) { %>
                                <div class="alert alert-success" role="alert">
                                    Processed request.
                                </div>
                                <% } %>
                                    <div class="row">
                                        <div class="col-xl">

                                            <div class="nav" style="margin-bottom: 20px;">
                                                <a>
                                                    <div class="btn btn-primary add-new">Refresh</div>
                                                </a>
                                            </div>
                                            <div class="accounts-wrapper">
                                                <p>Showing <b><%= rooms.length %></b> room<% if (rooms.length < 1 || rooms.length > 1) { %>s<% } %>.</p>
                                                <% rooms.forEach(function(room){ %>
                                                    <a href="/panel/room/ID">
                                                        <div class="card accounts-card">
                                                            <div class="card-body border-r">
                                                                <div class="con-grid1">
                                                                    <img class="account-avatar" src="https://avatars.githubusercontent.com/u/80551136?s=280&v=4">
                                                                    <div class="account-text" style="line-height: 15px; text-align: left;">
                                                                        <%= room.name %><br><span style="font-size: 10px;     --tw-text-opacity: 1;
                                          color: rgba(154.148,165.363,177.352,var(--tw-text-opacity));"><%= room.id %></span></div>
                                                                    <div class="right-col-rooms"><i class="fas fa-user-friends"></i>
                                                                        <%= room.numPeopleInside %>
                                                                    </div>
                                                                    <div class="status-on-bar"></div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </a><br>
                                                    <% }); %>
                                            </div>
                                        </div>
                                    </div>
                            </div>
                </div>
        </body>

</html>